{{> elements/header}}
<div class="container">
    <div class="row">
        <div class="col-md-12">   
            <h2>Welcome {{contents.username}}</h2>
            <h2>Email on file {{contents.email}}</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">    
        <h3>{{contents.name}}</h3>
        <h3>{{contents.address}}</h3>
        <h3>{{contents.contact}}</h3>
        </div>
    </div>
</div>
<div class = "jobs">
    {{#each contents.Jobs}}
    <h3>{{this.title}}</h3>
    <h3>{{this.description}}</h3>
    {{/each}}
</div>
<div class = "form-input">
    <form action="/users/{{contents.username}}/home" method="POST">
        <label for ="title">Title</label>
        <input type = "text" name = "title">
        <label for ="description">Description</label>
        <input type = "text" name = "description">
        <input type="hidden"  name ="ClientId"value = {{contents.id}}>
        <button class= "btn btn-danger">Submit</button>
    </form>